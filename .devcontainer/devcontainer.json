/* CONTAINER for Python Development
 * references:
 * » https://containers.dev/implementors/json_reference
 * » https://github.com/devcontainers/features/tree/main/src
 * » https://code.visualstudio.com/docs/remote/containers
 * » https://github.com/devcontainers/images/blob/main/src/python
 *
 * » F1 > Dev Containers: Rebuild Container
 */
{
  "name": "Stock Indicators for Python",
  "image": "mcr.microsoft.com/devcontainers/python:3.12",
  "forwardPorts": [ ],
  "remoteUser": "vscode",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "version": "os-provided"
    },
    "ghcr.io/devcontainers/features/dotnet:2": {
      "version": "8.0" // TODO: use "lts"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts",
      "pnpmVersion": "none",
      "nvmVersion": "none"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "installDirectlyFromGitHubRelease": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/azure-cli:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/ruby:1": {
      "version": "3.3"
    },
    "ghcr.io/devcontainers-extra/features/isort:2": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/pylint:2": {
      "version": "latest"
    }
  },
  "customizations": {
    "vscode": {
      // container overrides only
      // otherwise use .vscode/settings.json
      "settings": {
        "pylint.enabled": true,
        "pylint.importStrategy": "fromEnvironment",
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      // also see .vscode/extensions.json
      // for recommended extensions
      "extensions": [
        "donjayamanne.python-extension-pack",
        "EditorConfig.EditorConfig",
        "ms-azuretools.vscode-docker",
        "ms-dotnettools.vscode-dotnet-runtime",
        "ms-python.black-formatter",
        "ms-python.debugpy",
        "ms-python.isort",
        "ms-python.python",
        "ms-python.pylint",
        "ms-python.vscode-pylance",
        "ms-vscode-remote.remote-containers"
      ]
    }
  },
  // Runs after the container is created
  "postCreateCommand": "chmod +x .devcontainer/install-dependencies.sh && .devcontainer/install-dependencies.sh",
  // Runs every time the container starts
  "postStartCommand": "echo 'Container started'"
}
